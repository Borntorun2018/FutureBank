<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true"
	xmlns:log4j='http://jakarta.apache.org/log4j/'>

<!-- Local log4j configuration -->
	<appender name="errorAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="c:/logs/divergence-errors" />
   		<param name="DatePattern" value="'_'yyyyMMdd'.log'" />
 	    <layout class="com.newborn.logging.LogPatternLayout">
	      <param name="ConversionPattern" value="%d{EEE MMM dd HH:mm:ss} BST %d{yyyy} [%u] %m%n" />
        </layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			  <param name="levelMin" value="ERROR" />
			  <param name="levelMax" value="ERROR" />
		</filter>        
	</appender>
	<appender name="debugAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="c:/logs/divergence-debug" />
   		<param name="DatePattern" value="'_'yyyyMMdd'.log'" />
  	    <layout class="com.newborn.logging.LogPatternLayout">
	      <param name="ConversionPattern" value="%d{EEE MMM dd HH:mm:ss} BST %d{yyyy} [%u] %m%n" />
        </layout>
 		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			  <param name="levelMin" value="DEBUG" />
			  <param name="levelMax" value="DEBUG" />
		</filter>              
	</appender>

 		<!-- 
<layout class="org.apache.log4j.PatternLayout"> 		
	    <layout class="com.newborn.logging.LogPatternLayout">
	    -->



		
   <!-- ================ -->
   <!-- Limit categories -->
   <!-- ================ -->

   <!-- Limit the org.apache category  -->
   <category name="org.apache">
      <priority value="INFO"/>
   </category>

   <!-- Limit JBoss categories -->
   <category name="org.jboss">
      <priority value="INFO"/>
   </category>
  
   <category name="org.springframework">
      <priority value="ERROR"/>
   </category>
   
   <!-- 
      <category name="org.springframework.security.web">
      <priority value="DEBUG"/>
   </category>
   -->
   
   
   
    <!-- Limit Hibernate categories -->
   <category name="org.hibernate">
      <priority value="ERROR"/>
   </category>

   <category name="net.sf.jmimemagic">
      <priority value="ERROR"/>
   </category>
	
	
   <!-- ======================= -->
   <!-- Setup the Root category -->
   <!-- ======================= -->
   
      
   
   <root>
    <priority value="DEBUG"/>
    <appender-ref ref="debugAppender" />
    <appender-ref ref="errorAppender" />
   </root>
	

</log4j:configuration>
